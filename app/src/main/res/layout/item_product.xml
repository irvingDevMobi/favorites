<?xml version="1.0" encoding="utf-8"?>
<lopez.irving.favorites.mvvm.view.custom.RoundedCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/product_height"
    android:layout_margin="@dimen/product_margin"
    android:background="@drawable/product_background"
    app:borderRadius="@dimen/container_radius">

    <ImageView
        android:id="@+id/product_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_item_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_nd_ic_plus_30" />

        <ImageView
            android:id="@+id/product_item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_nd_ic_plus_30" />

        <ImageView
            android:id="@+id/product_item_imported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nd_ic_international_30" />

        <ImageView
            android:id="@+id/product_item_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nd_ic_free_shipping_30" />

    </LinearLayout>

    <ImageView
        android:id="@+id/product_item_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/product_favorite_icon_margin"
        android:src="@drawable/ic_nd_ic_add_fav_on_32" />

</lopez.irving.favorites.mvvm.view.custom.RoundedCardView>