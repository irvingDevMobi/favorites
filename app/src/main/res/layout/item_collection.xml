<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:padding="@dimen/collection_container_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/collection_images_container_background"
        android:padding="@dimen/collection_images_container_padding"
        android:layout_marginBottom="@dimen/collection_images_container_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/collection_item_image_1"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/collection_container_padding"
            android:layout_width="@dimen/collection_image_size"
            android:layout_height="@dimen/collection_image_size" />

        <ImageView
            android:id="@+id/collection_item_image_2"
            android:layout_toEndOf="@+id/collection_item_image_1"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/collection_image_small_size"
            android:layout_height="@dimen/collection_image_small_size" />

        <ImageView
            android:id="@+id/collection_item_image_3"
            android:layout_marginTop="@dimen/collection_images_container_padding"
            android:layout_below="@+id/collection_item_image_2"
            android:layout_toEndOf="@+id/collection_item_image_1"
            android:layout_width="@dimen/collection_image_small_size"
            android:layout_height="@dimen/collection_image_small_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/collection_item_name"
        tools:text="Collection Name"
        android:textSize="@dimen/collection_text_size"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/collection_item_products"
        tools:text="15"
        android:textSize="@dimen/collection_text_size"
        android:textColor="@color/pinkish_grey"
        android:layout_marginBottom="@dimen/collection_container_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
